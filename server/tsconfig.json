{
  "compilerOptions": {
    "target": "ES2020",
    "composite": true,
    "module": "CommonJS",
    "outDir": "./dist",   
    "rootDir": ".",         
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",             
    "functions/**/*.ts"     
  ],
  "exclude": ["node_modules"]
}